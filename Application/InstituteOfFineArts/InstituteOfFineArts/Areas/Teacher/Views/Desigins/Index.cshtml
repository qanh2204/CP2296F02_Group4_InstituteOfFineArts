@model IEnumerable<InstituteOfFineArts.Models.Desigin>

@{
    ViewBag.Title = "Index";
    Layout = "~/Areas/Teacher/Views/Shared/_Layout.cshtml";
}

<h2>Index</h2>

<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.Path)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Name)
        </th>        
        <th>
            @Html.DisplayNameFor(model => model.Mark)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Exhibition)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Status)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Price)
        </th>       
        <th>
            @Html.DisplayNameFor(model => model.User.FullName)
        </th>
        <th></th>
    </tr>

    @foreach (var item in Model)
    {
        <tr>
            <td>
                <img src="@item.Path" style="height:100px;width:100px" />
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Name)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Mark)
            </td>

            <td>
                @if (item.Exhibition == 0)
                {
                    @Html.DisplayName("Yes");
                }

                else
                {
                    @Html.DisplayName("No");
                }
            </td>
            <td>
                @if (item.Status == 0)
                {
                    @Html.DisplayName("Available");
                }
                
                else
                {
                    @Html.DisplayName("Sold Out");
                }
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Price)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.User.FullName)
            </td>
            <td>
                @Html.ActionLink("Edit", "Edit", new { id = item.DesiginId }) |
                @Html.ActionLink("Details", "Details", new { id = item.DesiginId })
            </td>
        </tr>
    }

</table>
